{
    "meta": "config file for pixelized-lockscreen.ahk",
    "pixelateSize": 10,
    "blurSize": 2,
    "idlePeriod": 60000,
    "screenshotFilename": "screenshot.png",
    "removeScreenshot": {
        "onWinKeyup": false,
        "onUnlock": false,
        "onExitApp": true
    },
    "registry": {
        "path": "HKLM:\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\PersonalizationCSP",
        "item": "LockScreenImagePath"
    },
    "unsetLockImage": {
        "imagePath": false,
        "imagePath_example": ".\\images\\pixelation-icon.png"
    },
    "trayIcon": "screenshotlock",
    "trayTooltip": true,
    "debug": false
}
